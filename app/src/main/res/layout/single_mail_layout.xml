<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/sender_avatar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/rounded_corners"
        android:gravity="center"
        android:text="S"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sender"
        android:layout_width="250dp"
        android:layout_height="26dp"
        android:layout_marginStart="12dp"
        android:text="Sender"
        app:layout_constraintStart_toEndOf="@+id/sender_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time"
        android:layout_width="62dp"
        android:layout_height="23dp"
        android:layout_marginStart="1dp"
        android:text="Time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sender"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mail_title"
        android:layout_width="240dp"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Title"
        app:layout_constraintStart_toEndOf="@+id/sender_avatar"
        app:layout_constraintTop_toBottomOf="@+id/sender" />

    <TextView
        android:id="@+id/mail_content"
        android:layout_width="250dp"
        android:layout_height="17dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Mail Content"
        app:layout_constraintStart_toEndOf="@+id/sender_avatar"
        app:layout_constraintTop_toBottomOf="@+id/mail_title" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/mail_content"
        app:layout_constraintTop_toBottomOf="@+id/time" />

</androidx.constraintlayout.widget.ConstraintLayout>